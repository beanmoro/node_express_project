<h1>CRUD de archivos</h1>


{{#if error}}
<div class="alert alert-danger">
    {{error}}
</div>
{{/if}}

{{#if success}}
<div class="alert alert-success">
    {{success}}
</div>
{{/if}}





<h3>Crear un archivo</h3>
<form action="/archivos/crear" method="POST">
    <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control">
    </div>
    <div class="form-group">
        Contenido
        <textarea name="contenido" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Crear archivo</button>

</form>


<h3 class="mt-5">Leer un archivo</h3>
<form action="/archivos/leer" method="GET">
    <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control">
    </div>
    {{!-- <div class="form-group">
        Contenido
        <textarea name="contenido" class="form-control"></textarea>
    </div> --}}

    <button type="submit" class="btn btn-info">Leer archivo</button>

</form>


<h3 class="mt-5">Renombra un archivo</h3>
<form action="/archivos/renombrar" method="POST">
    <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control">
    </div>

    <div class="form-group">
        Nuevo nombre del archivo
        <input name="nuevoNombre" class="form-control">
    </div>

    <button type="submit" class="btn btn-warning">Renombrar archivo</button>

</form>


<h3 class="mt-5">Eliminar un archivo</h3>
<form action="/archivos/eliminar" method="GET">
    <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control">
    </div>
    <button type="submit" class="btn btn-danger">Eliminar archivo</button>

</form>
